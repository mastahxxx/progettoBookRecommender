<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientBR.Controllers.LibrerieController">

    <children>
        <VBox spacing="12.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="12.0">

            <children>

                <HBox spacing="10.0">
                    <children>
                        <Label text="Le mie librerie">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font></Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button onAction="#onIndietro" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="indietro" />
                  <Button onAction="#onLogout" style="-fx-background-color: #FF4D4D; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="LOGOUT" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnCrea" onAction="#onCrea" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Crea libreria" />
                        <Button fx:id="btnRinomina" disable="true" onAction="#onRinomina" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Rinomina" />
                        <Button fx:id="btnElimina" disable="true" onAction="#onElimina" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Elimina" />
                    </children>
                </HBox>

                <TableView fx:id="tblLibrerie" prefHeight="420.0">
                    <columns>
                        <TableColumn fx:id="tNome" prefWidth="580.0" text="Nome libreria" />
                        <TableColumn fx:id="tNumero" prefWidth="180.0" text="Libri" />
                    </columns>
                </TableView>

                <Label fx:id="lblErr" text="" />
            </children>

            <padding>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
