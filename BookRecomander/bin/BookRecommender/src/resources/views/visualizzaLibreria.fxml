<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="560.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientBR.Controllers.VisualizzaLibrerieController">

    <children>
        <VBox spacing="12.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="12.0">

            <children>

                <HBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Visualizza Libreria" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnIndietro" onAction="#onIndietro" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Indietro" />
                        <Button fx:id="btnLogout" onAction="#onLogout" style="-fx-background-color: #FF4D4D; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="LOGOUT" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Libreria:" />
                        <Label fx:id="lblNomeLibreria" prefHeight="17.0" prefWidth="105.0" style="-fx-font-weight: bold;" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label text="Totale libri:" />
                        <Label fx:id="lblTotale" style="-fx-font-weight: bold;" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnAggiungi" onAction="#onAggiungi" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Aggiungi libro" />
                        <Button fx:id="btnRimuovi" disable="true" onAction="#onRimuovi" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Rimuovi selezionato" />
                    </children>
                </HBox>

                <TableView fx:id="tblLibri" prefHeight="420.0">
                    <columns>
                        <TableColumn fx:id="tTitolo" prefWidth="520.0" text="Titolo" />
                        <TableColumn fx:id="tAutore" prefWidth="240.0" text="Autore" />
                        <TableColumn fx:id="tAnno" prefWidth="120.0" text="Anno" />
                    </columns>
                </TableView>

                <Label fx:id="lblErr" text="" />
            </children>

            <padding>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
