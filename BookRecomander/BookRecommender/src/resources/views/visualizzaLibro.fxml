<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientBR.Controllers.VisualizzaLibroController">

    <top>
        <AnchorPane prefHeight="92.0" prefWidth="631.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="libroVisionato" alignment="CENTER" layoutY="38.0" prefHeight="17.0" prefWidth="631.0" text="Libro visionato">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>

    <left>
        <AnchorPane prefHeight="208.0" prefWidth="179.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="208.0" prefWidth="232.0">
                    <children>
                        <Label fx:id="stile" alignment="CENTER" prefHeight="17.0" prefWidth="241.0" text="Stile">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                        <Label fx:id="contenuto" alignment="CENTER" prefHeight="17.0" prefWidth="243.0" text="contenuto">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                        <Label fx:id="gradevolezza" alignment="CENTER" prefHeight="20.0" prefWidth="234.0" text="gradevolezza">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                        <Label fx:id="originalita" alignment="CENTER" prefHeight="17.0" prefWidth="243.0" text="originalitÃ ">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                        <Label fx:id="edizione" alignment="CENTER" prefHeight="17.0" prefWidth="243.0" text="edizione">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                        <Label fx:id="votoFinale" alignment="CENTER" prefHeight="17.0" prefWidth="243.0" text="voto finale">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                    </children>
                    <padding>
                        <Insets top="40.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </left>

    <center>
        <ScrollPane prefHeight="208.0" prefWidth="215.0" BorderPane.alignment="CENTER">
            <content>
                <TextArea fx:id="note" prefHeight="202.0" prefWidth="295.0" promptText="NOTE" />
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tblViewConsigli" layoutX="15.0" layoutY="8.0" prefHeight="186.0" prefWidth="598.0">
                    <columns>
                        <TableColumn fx:id="tTitolo" prefWidth="200.0" text="Libri consigliati:  Titolo" />
                        <TableColumn fx:id="tAutore" prefWidth="200.0" text="Autore" />
                        <TableColumn fx:id="tAnno" prefWidth="200.0" text="Anno di pubblicazione" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </bottom>

    <right>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="cercaLibri" mnemonicParsing="false" onAction="#onCercaLibri" prefHeight="27.0" prefWidth="80.0" style="-fx-background-color: #CBF5FF; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="Cerca libri" />
                <Button fx:id="home" mnemonicParsing="false" onAction="#onHome" prefHeight="27.0" prefWidth="80.0" style="-fx-background-color: #FF4D4D; -fx-background-radius: 6; -fx-border-color: #1B5E20; -fx-border-radius: 6; -fx-border-width: 1;" text="HOME" />
            </children>
        </VBox>
    </right>

</BorderPane>
